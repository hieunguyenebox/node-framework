{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2015",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "baseUrl": ".",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
	    "!./*/**/__mocks__/*",
	    "!./*/**/__tests__/*"
    ]
}